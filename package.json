{
  "name": "@jonmatum/git-metrics-mcp-server",
  "version": "5.0.2",
  "description": "MCP server for analyzing git repository metrics and understanding team health",
  "main": "./build/git-metrics.js",
  "type": "module",
  "bin": {
    "git-metrics-mcp-server": "./build/git-metrics.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x build/git-metrics.js",
    "dev": "tsx src/git-metrics.ts",
    "start": "node build/git-metrics.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "mcp",
    "git",
    "metrics",
    "team-health",
    "collaboration",
    "kiro-cli",
    "amazon-q",
    "code-quality",
    "bus-factor",
    "technical-debt"
  ],
  "author": "Jonatan Mata <jonmatum@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonmatum/git-metrics-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/jonmatum/git-metrics-mcp-server/issues"
  },
  "homepage": "https://github.com/jonmatum/git-metrics-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
